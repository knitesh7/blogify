<div class="card" style="width: 18rem;display: flex;justify-content: center;">
    <div class="card-body d-flex flex-column justify-content-between align-items-center">
        <img class="card-title" style="width: 100%;" src="<%-blog.coverImage %>"></img>
        <h5 class="card-title">Blog No.<%- index %></h5>
        <h5 class="card-title"><%- blog.title %></h5>
        <%if(locals.allblogs){%>
            <h5 class="card-title"><i>-by <%- blog.createdBy.fullName %></i></h5>
        <%}%>
        
 
        <a href=<%-`/blog/read/${blog._id}`%> class="btn btn-primary">Read</a>
    </div>
</div>
